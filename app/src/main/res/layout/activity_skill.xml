<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img"
    tools:context=".Skill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Skills"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

    <EditText
        android:id="@+id/skill1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textColorHint="#99000000"
        android:background="@drawable/designtextview"
        android:padding="10dp"
        android:hint="Skill 1"/>


    <EditText
        android:id="@+id/skill2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textColorHint="#99000000"
        android:background="@drawable/designtextview"
        android:padding="10dp"
        android:hint="Skill 2"/>


    <EditText
        android:id="@+id/skill3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textColorHint="#99000000"
        android:background="@drawable/designtextview"
        android:padding="10dp"
        android:hint="Skill 3"/>


    <EditText
        android:id="@+id/skill4"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textColorHint="#99000000"
        android:background="@drawable/designtextview"
        android:padding="10dp"
        android:hint="Skill 4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/designtextview"
            android:text="Reset"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/designtextview"
            android:text="Next"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="5dp"/>



    </LinearLayout>
</LinearLayout>